{
  "name": "bereans-theme",
  "version": "1.0.0",
  "description": "A custom wordpress theme for Bereans at the Gate. Uses a toolkit based on Fabricator and building off of Bootstrap 4.",
  "main": "index.php",
  "scripts": {
    "sync": "browser-sync start --proxy http://localhost:80 -f \"wp-content/themes/**/*.*\"",
    "toolkit": "cd toolkit/ && npm start",
    "start": "npm-run-all -p sync toolkit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SchanelyStudios/bereans-theme.git"
  },
